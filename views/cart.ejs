      <title>Home Page</title>

      <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
      <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
      <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
      <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

      <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
      <script type="text/javascript" src="/scripts/app.js"></script>
    </head>

  <body>
    <%- include('partials/_header') %>
    <main class='main-common'>
      <div class='cart-page-header'>
      <div class='back-icon'>
        <a href="./items">‚Üê</a>
      </div>
      <!-- <h2 class='cart-h2'>Cart</h2> -->
      <h2 class='page-title-common'>Cart</h2>
    </div>
      <section class='cart-all-items'>
        <% for(let item of items) { %>
          <article class="cart-item">
            <header class="cart-article-header">
              <div class='article-left'>
                <div class='pic-container'>
                <div class='cart-item-pic'>
                  <img src='<%= item.photo_url %>'></img>
                </div>
              </div>
              <div class="text-cart">
                <span class='cart-item-info'><%= item.name %></span>
                <span class='cart-quantity'>Quantity: <%= item.quantity %></span>
                </div>
          </div>

          </header>
          </article>
      <% } %>
      </section class='cart-total-price'>


      <section class='cart-section'>
        <span class="total-title">Total:</span>
        <span class="cart-total-price">$<%= total / 100 %></span>

      </section>

      <div class="space"> </div>
      <form action="/cart/<%= orderId %>" method="post">
        <!-- <div class="view-cart">
          <button type ='submit'>Checkout</button>
         </div> -->
        <button type ='submit' class="view-cart">Checkout</button>
      </form>
      </main>
  </body>
</html>
