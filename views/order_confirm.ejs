      <% for(let item of items) { %>
        <section class="margeTop10">
          <h4 class="card-subtile ">Item: <span><%= item.name %></span></h4>
          <h4 class="card-subtile">Quantity: <span><%= item.quantity %></span></h4>
          <div class="order-line-light"></div>
        </section>
        <% } %>
      <h4 class="orderConfirm-subtitle margeTop10">Total Price: <span>$<%= total / 100 %></span></h4>
